<tr id="<%= dom_id(employee) %>">
  <td><%= employee.name %></td>
  <td><%= employee.cpf %></td>
  <td><%= number_to_currency(employee.salary, unit: 'R$ ') %></td>
  <td><%= number_to_currency(employee.inss_discount, unit: 'R$ ') %></td>
  <td>
    <%= form_with url: update_salary_employee_path(employee), method: :patch, class: "d-flex gap-2 align-items-center" do |form| %>
      <%= form.number_field :salary, step: 0.01, required: true, class: "form-control form-control-sm w-auto" %>
      <%= form.submit "Atualizar", class: "btn btn-sm btn-outline-success" %>
    <% end %>
  </td>
</tr>